{
  "name": "@hop/engine",
  "version": "1.0.0",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./ai": "./src/ai/index.ts",
    "./combat": "./src/combat/index.ts",
    "./effects": "./src/effects/index.ts",
    "./entities": "./src/entities/index.ts",
    "./evaluation": "./src/evaluation/index.ts",
    "./movement": "./src/movement/index.ts",
    "./tiles": "./src/tiles/index.ts",
    "./visual": "./src/visual/index.ts",
    "./*": "./src/*.ts"
  },
  "scripts": {
    "generate-skill-registry": "npx tsx ./scripts/generateSkillRegistry.ts",
    "generate-enemy-ai-parity-fixture": "npx tsx ./scripts/generateEnemyAiParityFixture.ts",
    "check-enemy-ai-parity-fixture": "npx tsx ./scripts/generateEnemyAiParityFixture.ts --check",
    "prebuild": "npm run generate-skill-registry",
    "build": "tsc",
    "test": "vitest run",
    "test:ai-acceptance": "npx tsx ./scripts/runAiAcceptance.ts",
    "test:ai-acceptance:strict": "npx tsx ./scripts/runAiAcceptance.ts --strict",
    "inspect-enemy-ai": "npx tsx ./scripts/runEnemyAiDecisionDiff.ts",
    "report-enemy-ai-policy-dependence": "npx tsx ./scripts/reportEnemyAiPolicyDependence.ts",
    "report-enemy-ai-synthetic-gap": "npx tsx ./scripts/reportEnemyAiPolicyDependence.ts --synthetic-only",
    "report-enemy-ai-mode-diff": "npx tsx ./scripts/reportEnemyAiModeDiff.ts",
    "report-enemy-ai-dynamic-bias-decision-diff": "npx tsx ./scripts/reportEnemyAiDynamicBiasDecisionDiff.ts",
    "report-enemy-ai-intent-bias-drift": "npx tsx ./scripts/reportEnemyAiIntentBiasDrift.ts",
    "report-enemy-ai-turn-mode-diff": "npx tsx ./scripts/reportEnemyAiTurnModeDiff.ts",
    "check-deprecated-constants-usage": "npx tsx ./scripts/checkDeprecatedConstantsUsage.ts",
    "check-script-imports": "npx tsx ./scripts/checkScriptImports.ts && npm run check-deprecated-constants-usage",
    "validate-replay": "npx tsx ./scripts/validateReplay.ts",
    "validate-replay-smoke": "npx tsx ./scripts/validateReplay.ts ./scripts/fixtures/replay.smoke.json",
    "replay-parity-gate": "npx tsx ./scripts/runReplayParityGate.ts",
    "check-rng-parity": "node ./scripts/checkRngParity.js",
    "validate-state-mirror": "npx tsx ./scripts/validateStateMirror.ts",
    "validate-state-mirror-sample": "npx tsx ./scripts/validateStateMirror.ts ./scripts/fixtures/mirror.engine.sample.json ./scripts/fixtures/mirror.ui.sample.json"
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "~5.9.3",
    "vitest": "^1.1.4"
  }
}
